
<%- include('../partials/head') %>

<body>
    <main>
        <%- include('../partials/header') %>

        <section class="container-edit">
          <%- include('../partials/profileBar') %>

          <section class="form-edit">
            <h1 class="tittle-edit">Editar Usuario</h1>
              <form  method="post" action="/users/profile/<%= user.id %>?_method=PATCH">

                <div class="container-edit">
                  <p>Tu Nombre/s</p>
                  <input class="name" type="text" name="first_name" value= "<%= user.firstName%>">
                </div>

                <div class="container-edit">
                  <p>Tu Apellido/s</p>
                    <input class="surname" type="text" name="last_name" value= "<%= user.lastName%>">
                </div>

                <div class="container-edit">
                  <p>Tu Categoria</p>
                    <input class="category" type="text" name="category" value= "<%= user.category%>">
                </div>

                <div class="container-edit">
                  <p> Coloque su contrase√±a</p>
                    <input class="password" type="password" name="password">
                </div>

                <section class= "send-or-reset">
                  <button class="btn-form-enter" type="submit">Guardar cambios</button>
                </section>
          </section>
        </section>





        <%- include('../partials/footer') %>

    </main>
</body>
