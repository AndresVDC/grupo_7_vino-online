
<%- include('../partials/head') %>

<body>
    <main>
        <%- include('../partials/header') %>

        <section class="container-edit">
          <section class="container-colum">
            <a href="/users/profile/<%= user.id %>">Perfil Principal</a>
            <a href="/users/profile/<%= user.id %>/edit">Editar Datos</a>
            <a href="/users/profile/<%= user.id %>/avatar">Editar Avatar</a>
            <a href="/users/profile/<%= user.id %>/password">Editar Contraseña</a>
          </section>

          <section class="form-edit">
            <h1 class="tittle-edit">Editar Contraseña</h1>
              <form  method="post" action="/users/profile/<%= user.id %>/password?_method=PATCH">

                <div class="container-edit">
                  <p> coloque su antigua contraseña</p>

                    <input class="password" type="password" name="password1">
                </div>

                <div class="container-edit">
                  <p> coloque su nueva contraseña</p>

                    <input class="password" type="password" name="password2">
                </div>

                <div class="container-edit">
                  <p> Confirme la nueva contraseña</p>

                    <input class="password" type="password" name="password3">
                </div>

                <section class= "send-or-reset">
                  <button class="btn-form-enter" type="submit">Guardar cambios</button>
                </section>

              </form>
          </section>
        </section>





        <%- include('../partials/footer') %>

    </main>
</body>
