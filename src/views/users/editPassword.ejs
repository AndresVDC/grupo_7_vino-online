
<%- include('../partials/head') %>

<body>
    <main>
        <%- include('../partials/header') %>

        <section class="container-edit">
          <%- include('../partials/profileBar') %>

          <section class="form-edit">
            <h1 class="tittle-edit">Editar Contrase単a</h1>
              <form  method="post" action="/users/profile/editPassword/<%= user.id %>" >

                <div class="container-edit">
                  <p> coloque su antigua contrase単a</p>

                    <input class="password" type="password" name="password1">
                    <p><%= typeof passErrors.password1 == 'undefined' ? "" : passErrors.password1.msg %></p>
                    <p><%= typeof errorPass == 'undefined' ? "" : errorPass %></p>
                </div>

                <div class="container-edit">
                  <p> coloque su nueva contrase単a</p>

                    <input class="password" type="password" name="password2">
                    <p><%= typeof passErrors.password2 == 'undefined' ? "" : passErrors.password2.msg %></p>
                </div>

                <div class="container-edit">
                  <p> Confirme la nueva contrase単a</p>

                    <input class="password" type="password" name="password3">
                  <p><%= typeof passErrors.password3 == 'undefined' ? "" : passErrors.password3.msg %></p>  
                </div>

                <section class= "send-or-reset">
                  <button class="btn-form-enter" type="submit">Guardar cambios</button>
                </section>

              </form>
          </section>
        </section>





        <%- include('../partials/footer') %>

    </main>
</body>
