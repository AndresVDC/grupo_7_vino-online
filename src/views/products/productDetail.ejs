<%- include('../partials/head') %>

    <body>
        <main>
            <%- include('../partials/header') %>
                <section class="main-margin">
                    <section class="productDetail">
                        <div class="productDetail-container1">
                            <img class="productDetail-container-image" src="<%= product.image %>" alt="">
                        </div>
                        <div class="productDetail-container2">
                            <h4 class="productDetail-container-productName">
                                <%= product.name %>
                            </h4>
                            <span class="productDetail-container-Detail">
                                <%= product.detail %>
                            </span>
                            <span class="productDetail-container-price">$
                                <%=(product.price-product.price*product.discount /100).toFixed(2)
                                    %>
                            </span>
                            <div class="productDetail-container3"><span class="offers-container-card-realPrice">$
                                    <%=product.price%>
                                </span> <span class="offers-container-card-discount">
                                    <%=product.discount%>%off
                                </span>
                            </div>
                            <span class="productDetail-container-unitsPerProduct">
                                <%= product.score %> Estrellas
                            </span>
                            <span class="productDetail-container-unitsPerProduct">
                                <%= product.presentation %>
                            </span>
                            <div class="productDetail-container-containerUnit">
                                <form action="addToCart" method="POST">
                                    <i class="fas fa-minus-circle cart-icon"></i>
                                    <input class="cart-counter" type="text" id="counter" name="counter" value="1">
                                    <input hidden value="<%=product.id%>" name="id">
                                    <input hidden value="<%=(product.price-product.price*product.discount /100).toFixed(2)%>" name="price">
                                    <i class="fas fa-plus-circle cart-icon"></i>
                                    <button class="cart-btn5">Agregar al carrito</button>
                            </div>
                            <div class="flex">
                                <% if (locals.user.category=='Administrador' ) { %>
                                    <form class="productDetail-container-btn"
                                        action="delete/<%=product.id%>?_method=DELETE" method="POST">
                                        <a class="cart-btn51" href="edit/<%=product.id%>"><span>Editar
                                                producto</span></a>
                                        <button class="cart-btn52" type="submit">Borrar producto</button>
                                    </form>
                                    <% } %>
                            </div>

                        </div>
                    </section>
                    <section class="card-banner">
                        <div>
                            <a class="card-banner-shipping" href="#">
                                <span class="text-icons-large">Opciones de envío</span>
                                <span class="text-icons-small">Llegamos a todo el país</span>
                                <i class="fas fa-chevron-right right-arrow"></i>
                            </a>
                        </div>
                        <div>
                            <a class="card-banner-payment" href="#">
                                <span class="text-icons-large">Opciones de pago</span>
                                <span class="text-icons-small">¡Pagá en cuotas sin interés!</span>
                                <i class="fas fa-chevron-right right-arrow"></i>
                            </a>
                        </div>
                    </section>
                    <!-- Aqui va la sección de Relacionados extraida.-->
                </section>
                <%- include('../partials/footer') %>
        </main>
    </body>

    </html>