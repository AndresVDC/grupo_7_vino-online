<%- include('../partials/head') %>

    <body>
        <main>
            <%- include('../partials/header') %>
                <section class="productDetail">
                    <form action="/products/edit/<%= productToEdit.id%>?_method=PUT" method="POST">
                        <div class="productDetail-container1">
                            <img class="productDetail-container-image" src="<%= productToEdit.img%>" alt="">
                            <input type="text" name="productScore" value="<%= productToEdit.productScore%>">
                            Estrellas</input>
                        </div>
                        <div class="productDetail-container2">
                            <input type="text" name="productName" value="<%= productToEdit.productName%>">
                            <textarea name="productDetail" value=""><%= productToEdit.productDetail%></textarea>
                            <input type="number" name="productPrice" value="<%= productToEdit.productPrice%>">
                            <input type="number" name="productDiscount" value="<%= productToEdit.productDiscount%>">
                            <input type="radio" name="productCategory" value="Tinto"> Tinto
                            <input type="radio" name="productCategory" value="Espumante"> Espumante
                            <input type="radio" name="productCategory" value="Blanco"> Blanco
                            <input type="radio" name="productCategory" value="Espirituoso"> Espirituoso
                            <input type="text" name="productPresentation" value="<%= productToEdit.productPresentation%>">
                            <button class="cart-btn5 type" submit">Editar</button>
                        </div>
                    </form>

                </section>
                <%- include('../partials/footer') %>
        </main>
    </body>

    </html>