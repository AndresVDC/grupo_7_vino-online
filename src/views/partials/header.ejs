<Header>
    <section class="background-blue">
        <div class="nav-bar main-margin">
            <div class="nav-bar--logo">
                <a href="/">
                    <img src="/images/logo.png" alt="Logo" width="100%" height="100%" id="logo">
                </a>
            </div>
            <div class="nav-bar--search">
                <form action="/products/search" method="GET">
                    <input type="search" name="search" id="search" placeholder="Buscar">
                    <label for="search"><i class="fas fa-search"></i></label>
                </form>
            </div>
            <div class="dropdown">
                <button class="dropbtn">
                    <i class="fas fa-bars"></i>
                </button>
                <div class="dropdown-content">
                    <% if (locals.user.category == 'Administrador') { %>
                    <a href="/../products/create">Vender</a>
                    <% } %>
                    <% if (locals.user.category == 'Administrador' || locals.user.category == 'Usuario') { %>
                    <a href="/users/profile/<%= locals.user.id%>"> Perfil de <%= locals.user.firstName %></a>
                    <a href="/users//logout"> Cerrar</a>
                    <% } %>
                    <a href="/../products/productCart">Carrito</a>
                    <% if (locals.user == false) { %>
                    <a href="/../users/register">Registro</a>
                    <a href="/../users/login">Login</a>
                    <% } %>
                </div>
            </div>
        </div>
    </section>
</Header>